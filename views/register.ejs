                                            <option>테마관광지</option>
                                            <option>도보</option>
                                            <option>레저/체험</option>
                                        </select>
                                    </div>
                                    <div style="float:left; width:45%">
                                        <h5>위치</h5>
                                        <select name="loca_r">
                                            <option>서울시</option>
                                            <option>강원도</option>
                                            <option>경기도</option>
                                            <option>경상북도</option>
                                            <option>경상남도</option>
                                            <option>전라북도</option>
                                            <option>전라남도</option>
                                            <option>충청북도</option>
                                            <option>충청남도</option>
                                        </select>
                                    </div>
                                    <!-- Search Filter Section End -->
                                </div>
                                <div class="col-lg-12 text-center">
                                    <textarea name="content_r" placeholder="내용"></textarea>
                                    <input name="picture_r" type="file">
                                    <button type="submit">보내기</button>
                                </div>
                            </div>
                        </form>
